<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cdxy.schoolinforapplication.ui.topic.SelectPhotoActivity">
   <TextView
       android:layout_margin="5dp"
       android:id="@+id/ok"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="完成"
       android:background="#d1f7f0"
       android:textColor="@color/colorAccent"
       android:onClick="onClick"
       android:clickable="true"
       android:padding="5dp"
       android:layout_gravity="right"
       />
   <GridView
      android:layout_below="@+id/ok"
       android:id="@+id/gridView_file_image"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:horizontalSpacing="4dp"
       android:verticalSpacing="4dp"
       android:numColumns="4"
       android:padding="4dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:background="#e4dddd">
      <TextView
          android:id="@+id/select_folder"
          android:paddingLeft="10dp"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:text="所有图片"
          android:textColor="#ffffff"
          android:textSize="14sp"
          android:onClick="onClick"
          android:clickable="true"
          android:gravity="center_vertical"
          />
      <ImageView
          android:layout_width="15dp"
          android:layout_height="match_parent"
          android:src="@drawable/text_indicator_normal"/>
   </LinearLayout>
</LinearLayout>
